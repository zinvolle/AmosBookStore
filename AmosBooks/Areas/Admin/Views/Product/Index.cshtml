@model List<Product>

<partial name="_Notification" />

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
            <div class="text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <div class="container">
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Category
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Id))
                {
                <tr>
                    <td>
                        @obj.Title
                    </td>
                    <td>
                        @obj.ISBN
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>
                        @obj.Author
                    </td>
                    <td>
                        
                    </td>
                    <td>
                        <div class="w-30 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square">Edit</i>
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-dash-circle">Delete</i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
</div>

